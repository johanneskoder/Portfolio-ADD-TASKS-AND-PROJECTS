function createDiv() {
    const newItem = document.createElement("div");
    newItem.classList.add("image-style");
    newItem.classList.add("box-style");
    newItem.classList.add("text-style");
    document.body.appendChild(newItem);
    const newParagraph = document.createElement("p");
    const newImage = document.createElement("img");
    newParagraph.textContent = "This is an oversized paragraph"
    newImage.src = "images/cat.jpg"
    newItem.appendChild(newParagraph);
    newItem.appendChild(newImage);
}

document.getElementById("createButton").addEventListener("click",    createDiv)

function deleteButton() {
    location.reload()
}

document.getElementById("deleteButton").addEventListener("click",    deleteButton)

